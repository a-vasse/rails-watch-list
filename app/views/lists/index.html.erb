<div class="cards mt-4">
  <% @lists.each do |list| %>
    <div class="card-tile" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= list.photo.attached? ? cl_image_path(list.photo.key) : image_path("tile") %>')" >
      <h2><%= link_to list.name, list_path(list) %></h2>
      <div class="card-options">
        <%= link_to list_path(list), data: { turbo_method: 'delete', turbo_confirm: "Delete List: #{list.name}?" }, class: 'btn' do %>
          <i class="fa-solid fa-trash"></i>
        <% end %>
      </div>
    </div>
  <% end %>
</div>
